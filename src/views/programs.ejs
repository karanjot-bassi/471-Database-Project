<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Uni Sports | Programs</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>

  <body>
    <!--NAVBAR-->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/shome">Uni Sports</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/shome">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/equipment">Equipment</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/book">Book</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/programs">Programs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">Settings</a>
            </li>
            <li class="nav-item">
              <a href="/">
                <button type="button" class="btn btn-outline-danger">
                  Sign-Out
                </button>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="pageHeaders">
      <h1>Programs</h1>
      <p>Here you can view and enroll in available programs.</p>
    </div>

    <div id="regular-cards" class="row row-cols-1 row-cols-md-3 g-4">
      <!-- The loop to dynamically create cards based on the fetched data -->
      <% ProgramsData.forEach(item => { %>
          <div class="col">
              <div class="card h-100 nike-card">
                  
                  <div class="card-body">
                      <h5 class="card-title"><%= item.Name %></h5>
                      <p class = "card-text"> Date: <%= item.Start_date %></p>
                      <p class = "card-text"> Open spots: <%= item.Availableslots %></p>
                      <p class = "card-text"> Price: <%= item.Price %></p>
                      <a
                        href="#"
                        class="btn btn-primary"
                        onclick="showConfirmationSign('<%= item.Name %>')"
                        >Register NOW</a
                      >
                  </div>
              </div>
          </div>
      <% }); %>
    </div>

    <div id="confirmationSign">
      <h2>Confirm Program Attendance</h2>
      <p>
        Are you sure you want to register for <span id="confirmationItem"></span>?
      </p>
      <button onclick="confirmProgram()">Confirm</button>
      <button onclick="closeProgram()">Cancel</button>
    </div>

    <script>
      function showConfirmationSign(itemName) {
        var confirmationSign = document.getElementById("confirmationSign");
        var confirmationItem = document.getElementById("confirmationItem");

        confirmationItem.innerHTML = itemName;
        confirmationSign.style.display = "block";
      }

      function confirmProgram() {
        alert("Registration confirmed!");
        closeBooking();
      }
      function closeProgram() {
        var confirmationSign = document.getElementById("confirmationSign");
        confirmationSign.style.display = "none";
      }
    </script>

    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
