    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />

    <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.6/dist/flatpickr.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.6/dist/flatpickr.min.css" />

  </head>

  <body>
    <!--NAVBAR-->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/shome">Uni Sport</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/shome">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/equipment">Equipment</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/book">Book</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/programs">Programs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">Settings</a>
            </li>
            <li class="nav-item">
              <a href="/">
                <button type="button" class="btn btn-outline-danger">
                  Sign-Out
                </button>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="pageHeaders">
      <h1>Book</h1>
      <p>
      Here you can Book courts and other locations.
      </p>
    </div>

    <div id="regular-cards">
      <!-- The loop to dynamically create cards based on the fetched data -->
      <% locationData.forEach(item => { %>
      <div class="card" id="regular-card">
        <div class="card-body">
          <h5 class="card-title"><%= item.Name %></h5>
          <a
            href="#"
            class="btn btn-primary"
            onclick="showConfirmationSign('<%= item.Name %>')">Book</a>
        </div>
      </div>
      <% }); %>
    </div>

    <div id="bookingConfirmationSign">
      <h2>Confirm Rental</h2>
      <p>
        Please choose a date to book <span id="confirmationItem"></span>.
      </p>
      <form id="bookingForm">
        <label for="bookingDate">Select Date:</label>
        <input type="text" id="bookingDate" name="bookingDate" required>
        <button type="button" onclick="confirmBooking()">Confirm</button>
        <button type="button" onclick="closeBooking()">Cancel</button>
      </form>
    </div>

      <script>
      function showConfirmationSign(itemName) {
        var ConfirmationSign = document.getElementById("bookingConfirmationSign");
        var ConfirmationItem = document.getElementById("confirmationItem");

        ConfirmationItem.innerHTML = itemName;
        ConfirmationSign.style.display = "block";

        // Initialize flatpickr
        flatpickr("#bookingDate", {
          mode: "range",
          dateFormat: "Y-m-d",
          minDate: "today", // Optional: set the minimum date to today
        });
      }

      function confirmBooking() {
        var selectedDates = document.getElementById("bookingDate").value;

        // Validate the selected date(s) (you may need additional validation)
        if (!selectedDates) {
          alert("Please select a valid date or date range for the booking.");
          return;
        }

        alert("Booking Confirmed!\nSelected Date(s): " + selectedDates);
        closeBooking();
      }

      function closeBooking() {
        var ConfirmationSign = document.getElementById("bookingConfirmationSign");
        ConfirmationSign.style.display = "none";
      }
      </script>

    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
